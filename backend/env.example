# Configurações do WhatsApp (opcional)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_KEY=your_api_key_here
WHATSAPP_PHONE_ID=your_phone_id_here

# Database
# SQLite (padrão para desenvolvimento)
# DATABASE_URL=sqlite:///./noticias.db

# PostgreSQL (recomendado para produção/EasyPanel)
# DATABASE_URL=postgresql://usuario:senha@host:porta/nome_do_banco
# Exemplo EasyPanel: DATABASE_URL=postgresql://postgres:senha@db.easypanel.app:5432/devocional_db

# Configurações Evolution API para Devocionais
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua_chave_api_aqui
EVOLUTION_INSTANCE_NAME=Devocional

# Rate Limiting (proteção contra bloqueio do WhatsApp)
DELAY_BETWEEN_MESSAGES=3.0  # segundos entre mensagens (recomendado: 3-5)
MAX_MESSAGES_PER_HOUR=20     # máximo de mensagens por hora (recomendado: 15-25)
MAX_MESSAGES_PER_DAY=200     # máximo de mensagens por dia (recomendado: 150-250)

# Retry Configuration
MAX_RETRIES=3                # tentativas em caso de falha
RETRY_DELAY=5.0              # segundos entre tentativas

# Horário de envio automático (formato HH:MM)
DEVOCIONAL_SEND_TIME=06:00

# Integração com Automação Externa (n8n, etc)
DEVOCIONAL_WEBHOOK_SECRET=seu-secret-super-seguro-aqui
DEVOCIONAL_API_URL=https://sua-api-n8n.com/api/devocional/today
DEVOCIONAL_API_KEY=sua-chave-api
DEVOCIONAL_FETCH_MODE=webhook  # "webhook" ou "api"
